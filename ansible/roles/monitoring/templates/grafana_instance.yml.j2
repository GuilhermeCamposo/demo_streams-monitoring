apiVersion: grafana.integreatly.org/v1beta1
kind: Grafana
metadata:
  name: grafana
  namespace: '{{ cluster_project }}'
  labels:
    dashboards: grafana-a
    folders: grafana-a
spec:
  config:
    auth:
      disable_signout_menu: 'true'
    auth.anonymous:
      enabled: 'false'
    log:
      level: info
      mode: console
    security:
      admin_password: {{ grafana_password }}
      admin_user: {{ grafana_user }}
  route:
    spec: {}
